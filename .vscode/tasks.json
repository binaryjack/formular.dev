{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üèóÔ∏è Build Lib for Development",
            "type": "shell",
            "command": "pnpm",
            "args": ["--filter", "formular.dev.lib", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "üëÄ Watch Lib",
            "type": "shell",
            "command": "pnpm",
            "args": ["--filter", "formular.dev.lib", "build", "--watch"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$tsc-watch"]
        },
        {
            "label": "üöÄ Start React Dev Server",
            "type": "shell",
            "command": "pnpm",
            "args": ["--filter", "formular.components", "start:dev"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "."
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:   (https?://localhost:[0-9]+)"
                }
            },
            "dependsOn": "üèóÔ∏è Build Lib for Development"
        },
        {
            "label": "üöÄüëÄ Start Development with Lib Watch",
            "dependsOrder": "parallel",
            "dependsOn": [
                "üëÄ Watch Lib",
                "üöÄ Start React Dev Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "npm",
            "script": "start:dev",
            "label": "npm: start:dev",
            "detail": "Start development server with development environment",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "type": "npm",
