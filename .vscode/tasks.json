        },
        {
            "type": "npm",
            "script": "build:dev",
            "label": "npm: build:dev",
            "detail": "Build for development environment",
            "group": "build",
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "npm",
            "script": "build:integration",
            "label": "npm: build:integration",
            "detail": "Build for integration environment",
