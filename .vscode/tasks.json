            "detail": "Build for production environment",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "üßπ Clean All",
            "type": "shell",
            "command": "powershell",
            "args": ["-Command", "Remove-Item -Path 'packages/lib/dist' -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'packages/vendors/react/formular.components/dist' -Recurse -Force -ErrorAction SilentlyContinue"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
