{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Development Server",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run start:dev",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Integration Server",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run start:integration",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "integration"
            }
        },
        {
            "name": "Launch Production Server",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run start:production",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "name": "Debug Chrome - Development",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "preLaunchTask": "npm: start:dev"
        },
        {
            "name": "Debug Chrome - Integration",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "preLaunchTask": "npm: start:integration"
        },
        {
            "name": "Build Development",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run build:dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Build Integration",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run build:integration",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Build Production",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run build:production",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Serve Preview - Development",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run serve:dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Serve Preview - Integration",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run serve:integration",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Serve Preview - Production",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run serve:production",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current File",
            "program": "${file}",
            "console": "internalConsole",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "preLaunchTask": "npm: watch"
        }
    ]
}
