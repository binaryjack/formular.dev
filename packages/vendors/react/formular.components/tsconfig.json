{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitThis": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "types": ["cypress", "jest", "node"],
        "baseUrl": "./",
        "paths": {
            "@tests/*": ["src/__tests__/*"],
            "@mocks/*": ["src/__tests__/mocks/*"],
            "@components/*": ["src/components/*"],
            "@adapters/*": ["src/adapters/*"],
            "@demo/*": ["src/showcase/demo/*"],
            "@showcase/*": ["src/showcase/*"],
            "@patterns/*": ["src/patterns/*"],
            "@style/*": ["src/style/*"],
            "@pages/*": ["src/showcase/pages/*"],
            "formular.dev.lib": ["../../../lib/dist/formular-dev.es.d.ts"],
            "formular.dev.lib/*": ["../../../lib/dist/*"],
            "formular.design.system": ["../../../design-system/dist/index.d.ts"],
            "formular.design.system/*": ["../../../design-system/dist/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src", "tests"]
}
