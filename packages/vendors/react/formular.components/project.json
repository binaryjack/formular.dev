{
    "name": "formular-components",
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/vendors/react/formular.components/src",
    "projectType": "application",
    "tags": ["type:app", "scope:react", "framework:react"],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vite build",
                "cwd": "packages/vendors/react/formular.components"
            },
            "dependsOn": ["formular-dev-lib:build"]
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vite",
                "cwd": "packages/vendors/react/formular.components"
            },
            "dependsOn": ["formular-dev-lib:build:dev"]
        },
        "preview": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vite preview",
                "cwd": "packages/vendors/react/formular.components"
            },
            "dependsOn": ["build"]
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "jest",
                "cwd": "packages/vendors/react/formular.components"
            }
        },
        "test:watch": {
            "executor": "nx:run-commands",
            "options": {
                "command": "jest --watch",
                "cwd": "packages/vendors/react/formular.components"
            }
        },
        "test:coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "jest --coverage",
                "cwd": "packages/vendors/react/formular.components"
            }
        },
        "test:e2e": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cypress open",
                "cwd": "packages/vendors/react/formular.components"
            }
        },
        "test:e2e:ci": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cypress run",
                "cwd": "packages/vendors/react/formular.components"
            }
        }
    }
}
