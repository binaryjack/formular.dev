{
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "none",
    "printWidth": 100,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": ["*.json", "*.md"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}
