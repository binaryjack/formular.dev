{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://formular.dev/schemas/replacement-token.json",
    "title": "Replacement Token Configuration",
    "description": "Token replacement settings for localization",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The replacement token name identifier"
        },
        "token": {
            "type": "string",
            "description": "The token value to replace"
        }
    },
    "required": ["name", "token"],
    "additionalProperties": false
}
