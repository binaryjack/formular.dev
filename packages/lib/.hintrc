{
    "extends": ["development"],
    "hints": {
        "axe/forms": [
            "default",
            {
                "label": "off"
            }
        ],
        "no-inline-styles": "off",
        "axe/parsing": [
            "default",
            {
                "duplicate-id": "off"
            }
        ],
        "axe/aria": [
            "default",
            {
                "aria-valid-attr-value": "off"
            }
        ],
        "compat-api/css": [
            "default",
            {
                "ignore": [
                    "-webkit-text-size-adjust",
                    "text-wrap",
                    "text-wrap: wrap",
                    "text-wrap: nowrap"
                ]
            }
        ]
    }
}
